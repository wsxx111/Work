        }

            .file input {
                position: absolute;
                font-size: 100px;
                right: 0;
                top: 0;
                opacity: 0;
            }

            .file:hover {
                background: #bab5b5;
                border-color: black;
                color: #3d3a3a;
                text-decoration: none;
