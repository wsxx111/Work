    <style type="text/css">
        .dataShow {
            background-color: #ffd800;
            width: 300px;
            height: 200px;
            font-size: 16px;
        }

        .file {
            position: relative;
            display: inline-block;
            background: white;
            border: 1px solid gray;
            border-radius: 4px;
            padding: 3px 10px;
            overflow: hidden;
